<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/layoutJabarHariIni"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <!-- Dots Indicator -->
        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:dotsColor="@color/dot_active"
            android:layout_gravity="center"
            app:selectedDotColor="@color/dot_inactive" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="#FAFAFA"
            android:padding="16dp">

            <!-- Baris Atas: Icon Lokasi & Teks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/ic_lokasi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Icon Lokasi" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_judul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berada di zona mana Anda saat ini?"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="14sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false" />


                    <TextView
                        android:id="@+id/text_subjudul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cek dengan klik di bawah ini"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false" />

                </LinearLayout>
            </LinearLayout>

            <!-- Tombol -->
            <Button
                android:id="@+id/btnCekZona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cek Zona Resiko"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_bold"
                android:lineHeight="16sp"
                android:letterSpacing="0"
                android:textAllCaps="false"
                android:gravity="center"
                android:backgroundTint="#16A75C" />

        </LinearLayout>

        <!-- Update Harian Satgas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FAFAFA"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_update" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textUpdateHarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Harian Satgas Jabar"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:lineHeight="14sp"
                    android:letterSpacing="0"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/textTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Oktober 2020"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/roboto_regular"
                    android:lineHeight="12sp"
                    android:letterSpacing="0"
                    android:textAllCaps="false" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <!-- Data Kasus Jabar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <!-- Header -->
            <TextView
                android:id="@+id/textDataKasus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Kasus Jabar"
                android:textColor="#424242"
                android:textSize="16sp"
                android:fontFamily="@font/lato_black"
                android:lineHeight="16sp"
                android:letterSpacing="0"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Jan 2021 â€¢ 10:30"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/roboto_regular"
                android:lineHeight="12sp"
                android:letterSpacing="0"
                android:textAllCaps="false" />

            <!-- Gambar Kasus -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_gradient_kasus"
                android:layout_marginBottom="12dp"
                android:padding="16dp">

                <!-- Teks Utama -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL KASUS TERKONFIRMASI"
                        android:textColor="#FFFFFFCC"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.254"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="20sp"
                        android:letterSpacing="0"
                        android:textAllCaps="true"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </FrameLayout>
            <!-- Detail Kasus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="12dp">

                <!-- Reuse for Dirawat, Sembuh, Meninggal -->
                <!-- Dirawat -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_dirawat"
                        android:contentDescription="Icon Dirawat" />

                    <TextView
                        android:text="Dirawat"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false" />

                    <TextView
                        android:text="9.426"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="16sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Sembuh -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_sembuh"
                        android:contentDescription="Icon Sembuh" />

                    <TextView
                        android:text="Sembuh"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="20.269"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="16sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- Meninggal -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginStart="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_meninggal"
                        android:contentDescription="Icon Meninggal" />

                    <TextView
                        android:text="Meninggal"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="559"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="16sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pemeriksaan -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:padding="16dp"

                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pemeriksaan COVID-19"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_regular"
                        android:lineHeight="12sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14.968.555"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:fontFamily="@font/roboto_bold"
                        android:lineHeight="16sp"
                        android:letterSpacing="0"
                        android:textAllCaps="false"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="Go" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Chart Harian + Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#FAFAFA"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/chart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart Harian"
                android:textSize="16sp"
                android:textColor="#424242"
                android:fontFamily="@font/lato_black"
                android:lineHeight="16sp"
                android:letterSpacing="0"
                android:textAllCaps="false" />
            <TextView
                android:id="@+id/chart_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Terkonfirmasi 7 Hari Terakhir"
                android:textSize="12sp"
                android:textColor="#757575"
                android:fontFamily="@font/roboto_regular"
                android:lineHeight="12sp"
                android:letterSpacing="0"
                android:textAllCaps="false"
                android:layout_marginTop="2dp" />


            <!-- Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FAFAFA"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chart_bar"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Chart Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingin melihat data perkembangan harian?"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/roboto_bold"
                            android:lineHeight="14sp"
                            android:letterSpacing="0"
                            android:textAllCaps="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagikan lokasi dengan klik di bawah ini"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/roboto_regular"
                            android:lineHeight="12sp"
                            android:letterSpacing="0"
                            android:textAllCaps="false"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bagikan Lokasi + Sosmed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_horizontal">

            <!-- Tombol Bagikan Lokasi -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bagikan Lokasi"
                android:backgroundTint="#16A75C"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:lineHeight="16sp"
                android:letterSpacing="0"
                android:gravity="center" />


            <!-- Terima kasih -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Terima kasih sudah membaca"
                android:textColor="#757575"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_bold"
                android:lineHeight="18sp"
                android:letterSpacing="0"
                android:textAlignment="center"
                android:gravity="center" />


            <!-- Follow -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow juga sosmed kami"
                android:textColor="#757575"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:lineHeight="18sp"
                android:letterSpacing="0"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="30dp" />


            <!-- Sosial Media Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_instagram"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Instagram" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_twitter"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Twitter" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Facebook" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
